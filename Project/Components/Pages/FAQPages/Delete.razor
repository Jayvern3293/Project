@page "/faqs/delete"
@using Microsoft.EntityFrameworkCore
@using Project.Domain
@inject IDbContextFactory<Project.Data.ProjectContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>FAQ</h2>
    <hr />
    @if (faq is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Question</dt>
            <dd class="col-sm-10">@faq.Question</dd>
        </dl>
        <EditForm method="post" Model="faq" OnValidSubmit="DeleteFAQ" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(faq is null)">Delete</button> |
            <a href="/faqs">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private FAQ? faq;

    [SupplyParameterFromQuery]
    private int FAQId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        faq = await context.FAQ.FirstOrDefaultAsync(m => m.FAQId == FAQId);

        if (faq is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteFAQ()
    {
        using var context = DbFactory.CreateDbContext();
        context.FAQ.Remove(faq!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/faqs");
    }
}
