@page "/adoptionhistories/delete"
@using Microsoft.EntityFrameworkCore
@using Project.Domain
@inject IDbContextFactory<Project.Data.ProjectContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>AdoptionHistory</h2>
    <hr />
    @if (adoptionhistory is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@adoptionhistory.Date</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@adoptionhistory.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PetId</dt>
            <dd class="col-sm-10">@adoptionhistory.PetId</dd>
        </dl>
        <EditForm method="post" Model="adoptionhistory" OnValidSubmit="DeleteAdoptionHistory" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(adoptionhistory is null)">Delete</button> |
            <a href="/adoptionhistories">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private AdoptionHistory? adoptionhistory;

    [SupplyParameterFromQuery]
    private int AdoptionHistoryId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        adoptionhistory = await context.AdoptionHistory.FirstOrDefaultAsync(m => m.AdoptionHistoryId == AdoptionHistoryId);

        if (adoptionhistory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteAdoptionHistory()
    {
        using var context = DbFactory.CreateDbContext();
        context.AdoptionHistory.Remove(adoptionhistory!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/adoptionhistories");
    }
}
